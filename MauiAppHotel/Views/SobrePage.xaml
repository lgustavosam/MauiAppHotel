<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.SobrePage">

    <!-- Estrutura principal da página -->
    <Frame Padding="10" BackgroundColor="DarkSlateGrey">
        <VerticalStackLayout Padding="40" Spacing="40">

            <!-- Exibição da imagem do logotipo ou marca -->
            <Image Source="original.png"
                   HeightRequest="200"
                   WidthRequest="200"/>

            <!-- Mensagem ou slogan da aplicação -->
            <Label Text="Conectando ideias ao futuro"
                   FontFamily="Kalam"
                   FontSize="20"
                   TextColor="{StaticResource Gray200}"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand"/>

            <!-- Ano de referência da aplicação -->
            <Label Text="2025"
                   FontFamily="Kalam"
                   FontSize="15"
                   TextColor="{StaticResource Gray200}"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand"/>
        </VerticalStackLayout>
    </Frame>

</ContentPage>